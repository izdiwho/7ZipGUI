{
  "name": "7zip-gui",
  "productName": "7ZipGUI",
  "version": "1.0.0",
  "description": "GUI wrapper for 7-Zip",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": {
    "name": "Izdihar (w/ Claude Sonnet-3.5)"
  },
  "license": "ISC",
  "build": {
    "appId": "com.7zipgui.app",
    "productName": "7Zip GUI",
    "copyright": "Copyright Â© 2024",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "dmg": {
      "title": "7Zip GUI",
      "icon": "build/icon.icns",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  }
}
